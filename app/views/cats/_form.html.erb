<%= simple_form_for [@survey, @cat] do |f| %>


  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :survey_id, :value=>params[:survey_id] %>
    <%= f.input :before_street %>
    <%= f.input :before_city %>
    <div class="form-group">
      <%= f.label :before_state %> <br>
      <%= f.select(:before_state, [:MN, :WI, :IA,:ND,:Other], {class: "form-control"})%>
    </div>
    <%= f.input :before_zip %>
    <div class="form-group">
      <%= f.label :before_type %> <br>
      <%= f.select(:before_type,[:H,:W,:S,:SCHOOL,:O] ,{prompt: 'Select before type'} )%>
    </div>
    <%= f.input :after_street %>
    <%= f.input :after_city %>
    <div class="form-group">
      <%= f.label :after_state %> <br>
      <%= f.select(:after_state, [:MN, :WI, :IA,:ND,:Other], {class: "form-control"})%>
    </div>
    <%= f.input :after_zip %>
    <div class="form-group">
      <%= f.label :after_type %> <br>
      <%= f.select(:after_type,[:H,:W,:S,:SCHOOL,:O] ,{prompt: 'Select after type'} )%>
    </div>
    <div class="form-group">
      <%= f.label :location_prompting_visit %> <br>
      <%= f.select(:location_prompting_visit, [['Before',:before],['After',:after], ['Both', :both]]) %>
    </div>
    <%= f.input :amount_spent_today %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
